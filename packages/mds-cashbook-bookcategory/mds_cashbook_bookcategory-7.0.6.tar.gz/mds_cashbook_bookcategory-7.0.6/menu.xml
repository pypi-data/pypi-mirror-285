            id="menu_category_list-group_cashbook">
            <field name="menu" ref="menu_category_list"/>
            <field name="group" ref="cashbook.group_cashbook"/>
        </record>
        <record model="ir.ui.menu-res.group"
            id="menu_category_list-group_cashbook_admin">

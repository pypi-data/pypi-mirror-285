<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>
    <record id="add_dms_file_wizard_form_view" model="ir.ui.view">
      <field name="name">add.dms.file.wizard.form.view</field>
      <field name="model">add.dms.file.wizard</field>
      <field name="arch" type="xml">
        <form string="Add document">
          <sheet>
            <div class="oe_structure">
              <group name="main">
                <field name="file_data"/>
                <separator/>
                <field name="file_name"/>
                <field name="res_model" invisible="1"/>
                <field name="root_directory_id" 
                       domain="[
                        ('res_model', '=', res_model),
                        ('is_root_directory', '=', True)
                      ]"/>
              </group>
            </div>
          </sheet>
          <footer>
            <button 
                type="object"
                name="add_dms_file"
                string="Add"
            />
            <button special="cancel" string="Cancel" class="btn-secondary"/>
          </footer>
        </form>
      </field>
    </record>
    <act_window id="action_res_partner_add_dms_file"
                name="Add document"
                src_model="res.partner"
                res_model="add.dms.file.wizard"
                view_type="form"
                view_mode="form"
                target="new"
                multi="True"
                />
  </data>
</odoo>

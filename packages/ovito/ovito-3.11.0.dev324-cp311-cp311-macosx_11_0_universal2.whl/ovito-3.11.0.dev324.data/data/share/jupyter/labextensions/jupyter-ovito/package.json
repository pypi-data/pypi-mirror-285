{
  "name": "jupyter-ovito",
  "version": "0.1.5",
  "description": "A visualization widget for particle-based models",
  "author": "OVITO GmbH",
  "homepage": "https://www.ovito.org",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/stuko/ovito/-/issues",
    "email": "support@ovito.org"
  },
  "main": "lib/index.js",
  "keywords": [
    "jupyter",
    "widgets",
    "ipython",
    "ipywidgets",
    "jupyterlab-extension"
  ],
  "files": [
    "lib/**/*.js",
    "lib/css/*.css",
    "dist/*.js"
  ],
  "scripts": {
    "clean": "rimraf dist/ && rimraf ../python/ovito/labextension/ && rimraf ../python/ovito/nbextension",
    "prepublish": "yarn run clean && yarn run build:prod",
    "build": "webpack --mode=development && yarn run build:labextension:dev",
    "build:prod": "webpack --mode=production && yarn run build:labextension",
    "build:labextension": "jupyter labextension build .",
    "build:labextension:dev": "jupyter labextension build --development True .",
    "watch": "webpack --watch --mode=development",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@jupyterlab/builder": "^4.0.0",
    "css-loader": "^6.7.3",
    "react": "^18.2.0",
    "rimraf": "^2.6.1",
    "style-loader": "^3.3.1",
    "webpack": "^5",
    "webpack-cli": "^5.1.4",
    "webpack-glsl-loader": "1.0.1"
  },
  "dependencies": {
    "@jupyter-widgets/base": "^1.1 || ^2 || ^3 || ^4 || ^5 || ^6",
    "@jupyterlab/coreutils": "^6.0.0",
    "@jupyterlab/services": "^7.0.0",
    "@jupyterlab/settingregistry": "^4.0.0",
    "@lumino/widgets": "^2.1.0",
    "lodash": "^4.17.21",
    "three": "^0.153.0"
  },
  "jupyterlab": {
    "extension": "lib/labplugin",
    "outputDir": "../python/ovito/labextension",
    "webpackConfig": "./webpack.config.lab.js",
    "sharedPackages": {
      "@jupyter-widgets/base": {
        "bundled": false,
        "singleton": true
      }
    },
    "_build": {
      "load": "static/remoteEntry.bda61c236b608f7f4767.js",
      "extension": "./extension"
    }
  }
}

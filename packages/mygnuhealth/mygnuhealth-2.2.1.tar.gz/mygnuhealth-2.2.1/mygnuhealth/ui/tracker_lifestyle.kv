#:import utils kivy.utils
#:import tr mygnuhealth.lang.tr

<TrackerLifestyleScreen>:
    name: "tracker_lifestyle"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 30
        spacing: 30

        # PHYSICAL ACTIVITY
        BoxLayout:
            id: pactivity_layout
            orientation: "horizontal"

            Button:
                background_color: 0,0,0,0
                size_hint: {0.2,1}
                on_release: 
                    app.last_known_screen = root.manager.current
                    root.manager.current= "tracker_lifestyle_pactivity"
                Image:
                    id: button_lifestyle_pactivity
                    source: "./images/steps-icon.png"
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

            BoxLayout:
                id: pa_results_layout
                orientation: "horizontal"
                spacing: 10
                canvas.before:
                    Color: 
                        rgb: utils.get_color_from_hex('#d7edf0')
                    RoundedRectangle:
                        # self is the widget BoxLayout
                        pos: self.pos
                        size: self.size
                Label:
                    # Aerobic / Anaerobic pactivity
                    markup: True
                    text_size: self.width* 0.95, None
                    halign: 'left'
                    valign: 'middle'
                    text: 
                        "[size=19][color=136f84][b]" + tr._("Aerobic: ") + root.pactivity[1] \
                        + " " + tr._("m") + " // " + tr._("Anaerobic: ") + root.pactivity[2] \
                        + " " + tr._("m") + " // " + tr._("Steps: ")   \
                        + root.pactivity[3] + "[/b]\n\n[size=12]" + root.pactivity[0]

                Button:
                    background_color: 0,0,0,0
                    size_hint_x: 0.15
                    on_release:
                        app.last_known_screen = root.manager.current
                        root.manager.current = "tracker_lifestyle_pactivity_stats"
                    Image:
                        id: button_stats_pa
                        source:"./images/stats-button.png"
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y




                    halign: 'left'
                    valign: 'middle'
                    text: 
                        "[size=19][color=136f84][b]" + tr._("Nutrition (Kcal): ") + root.nutrition[1] \
                        + " / " + root.nutrition[2] + " / " + root.nutrition[3] + " (" + root.nutrition[4] \
                        + ")[/b]\n\n" + \
                        "[size=12]" + root.nutrition[0]

                Button:
                    background_color: 0,0,0,0
                    size_hint_x: 0.15

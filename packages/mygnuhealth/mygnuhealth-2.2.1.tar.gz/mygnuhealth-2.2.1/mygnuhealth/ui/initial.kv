#:import tr mygnuhealth.lang.tr

<InitialScreen>:
    name: "initial"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 20

        Image:
            source:"./images/my-gnu-health-isologo-slogan.png"
            # Scale the image to 70% of the box layout
            size_hint_x: 0.7
            pos_hint: {'center_x': 0.5}
            on_touch_down:
                root.account_status()

#:import tr mygnuhealth.lang.tr

<TrackerLifestyleNutritionScreen>:
    name: "tracker_lifestyle_nutrition"

    BoxLayout:
        orientation: "vertical"
        #size: root.width, root.height
        position_hint: {'center_x':0.5, 'center_y':0.5}
        padding: 10
        spacing: 20

        Image:
            id: button_lifestyle_nutrition
            source: "./images/nutrition-icon.png"
            size_hint: (0.5, None)
            pos_hint: {'center_x': 0.5}

        Label:
            markup: True
            text: 
                "[size=19][color=136f84][b]" + tr._("Nutrition (KCal)")

        BoxLayout:
            orientation: "horizontal"

            TextInput:
                id: calmorning
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint: (0.5, None)
                height: 70
                input_filter: 'int'
                multiline: False
                halign: 'center'
                padding: 5, 15
                font_size: 26
                foreground_color: utils.get_color_from_hex('#136f84')
                hint_text: tr._("Morning")
                write_tab: False
                background_normal: "./images/textinput_background_normal.png"
                background_active: "./images/textinput_background_active.png"

            TextInput:
                id: calafternoon
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint: (0.5, None)
                height: 70
                input_filter: 'int'
                multiline: False
                halign: 'center'
                padding: 5, 15
                font_size: 26
                foreground_color: utils.get_color_from_hex('#136f84')
                hint_text: tr._("Afternoon")
                write_tab: False
                background_normal: "./images/textinput_background_normal.png"
                background_active: "./images/textinput_background_active.png"

            TextInput:
                id: calevening
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint: (0.5, None)
                height: 70
                multiline: False
                halign: 'center'
                padding: 5, 15
                font_size: 26
                foreground_color: utils.get_color_from_hex('#136f84')
                hint_text: tr._("Evening")
                write_tab: False
                background_normal: "./images/textinput_background_normal.png"
                background_active: "./images/textinput_background_active.png"

        TextInput:
            id: caltotal
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: (0.5, None)
            height: 70
            input_filter: 'int'
            multiline: False
            halign: 'center'
            padding: 5, 15
            font_size: 26
            foreground_color: utils.get_color_from_hex('#136f84')
            hint_text: tr._("Total")
            write_tab: False
            background_normal: "./images/textinput_background_normal.png"
            background_active: "./images/textinput_background_active.png"

        TextInput:
            id: information
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: (0.5, None)
            height: 70
            multiline: False
            halign: 'center'
            padding: 5, 15
            font_size: 26
            foreground_color: utils.get_color_from_hex('#136f84')
            hint_text: tr._("Notes")
            write_tab: False
            background_normal: "./images/textinput_background_normal.png"
            background_active: "./images/textinput_background_active.png"
                    
        Button:
            background_color: (0,0,0,0)
            pos_hint: {'center_x': 0.5}
            size_hint: (0.5, None)
            on_release:
                root.validate_values(calmorning.text, calafternoon.text, \
                calevening.text, caltotal.text, information.text)
                root.manager.current= 'tracker_lifestyle'


            Image:
                source:"./images/done-button.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y


#:import tr mygnuhealth.lang.tr

<TrackerPsychoMoodScreen>:
    name: "tracker_psycho_mood"

    BoxLayout:
        orientation: "vertical"
        #size: root.width, root.height
        position_hint: {'center_x':0.5, 'center_y':0.5}
        padding: 10
        spacing: 20

        Label:
            markup: True
            text: 
                "[size=19][color=136f84][b]" + tr._("I am feeling...")

        BoxLayout:
            size_hint: (0.7, None)
            pos_hint: {'center_x': 0.5}

            Label:
                markup: True
                # text: "[b]Mood:[/b] " + str(int(mood.value))
                text: tr._("Mood")
                color: hexcolor('#32393a')

            Slider:
                id: mood
                min: -3
                max: 3
                value: 0
                step: 1
                orientation: 'horizontal'

            Image:
                id: img_psycho_mood
                source: "./images/mood" + str(int(mood.value)) + ".png"

        BoxLayout:
            size_hint: (0.7, None)
            pos_hint: {'center_x': 0.5}

            Label:
                markup: True
                #text: "[b]Energy:[/b] " + str(int(energy.value))
                text: tr._("Energy")
                color: hexcolor('#32393a')

            Slider:
                id: energy
                min: 0
                max: 3
                value: 1
                step: 1
                orientation: 'horizontal'

            Image:
                id: img_psycho_energy
                source: "./images/energy" + str(int(energy.value)) + ".png"

        TextInput:
            id: information
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: (0.5, None)
            height: 70
            multiline: False
            halign: 'center'
            padding: 5, 20
            font_size: 20
            foreground_color: utils.get_color_from_hex('#136f84')
            hint_text: tr._("Notes")
            write_tab: False
            background_normal: "./images/textinput_background_normal.png"
            background_active: "./images/textinput_background_active.png"

        Button:
            background_color: (0,0,0,0)
            pos_hint: {'center_x': 0.5}
            size_hint: (0.2, None)
            on_release:
                root.set_values(int(mood.value), int(energy.value), information.text)
                root.manager.current= 'tracker_psycho'

            Image:
                source:"./images/done-button.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y


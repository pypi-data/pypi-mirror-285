#:import tr mygnuhealth.lang.tr

<TrackerBioCardioScreen>:
    name: "tracker_bio_cardio"

    BoxLayout:
        orientation: "vertical"
        #size: root.width, root.height
        position_hint: {'center_x':0.5, 'center_y':0.5}
        padding: 10
        spacing: 20

        Image:
            id: button_bio_cardio
            source: "./images/cardio-icon.png"
            size_hint: (0.5, None)
            pos_hint: {'center_x': 0.5}

        Label:
            markup: True
            text: 
                "[size=19][color=136f84][b]" + tr._("Blood Pressure")

        TextInput:
            id: systolic
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: (0.5, None)
            height: 70
            input_filter: 'int'
            multiline: False
            halign: 'center'
            padding: 5, 15
            font_size: 26
            foreground_color: utils.get_color_from_hex('#136f84')
            hint_text: tr._("Systolic")
            write_tab: False
            background_normal: "./images/textinput_background_normal.png"
            background_active: "./images/textinput_background_active.png"

        TextInput:
            id: diastolic
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: (0.5, None)
            height: 70
            input_filter: 'int'
            multiline: False
            halign: 'center'
            padding: 5, 15
            font_size: 26
            foreground_color: utils.get_color_from_hex('#136f84')
            hint_text: tr._("Diastolic")
            write_tab: False
            background_normal: "./images/textinput_background_normal.png"
            background_active: "./images/textinput_background_active.png"

        TextInput:
            id: heart_rate
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: (0.5, None)
            height: 70
            input_filter: 'int'
            multiline: False
            halign: 'center'
            padding: 5,15
            font_size: 26
            foreground_color: utils.get_color_from_hex('#136f84')
            hint_text: tr._("Heart rate")
            write_tab: False
            background_normal: "./images/textinput_background_normal.png"
            background_active: "./images/textinput_background_active.png"
                    
        Button:
            background_color: (0,0,0,0)
            pos_hint: {'center_x': 0.5}
            size_hint: (0.5, None)
            on_release:
                root.validate_values(systolic.text, diastolic.text, \
                heart_rate.text)
                root.manager.current= 'tracker_bio'


            Image:
                source:"./images/done-button.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y

